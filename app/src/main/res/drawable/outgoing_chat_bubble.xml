<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="100%"
            android:pivotY="100%"
            android:toDegrees="0">
            <inset android:insetLeft="0%">
                <shape android:shape="rectangle">
                    <solid android:color="@color/chat_bubble_mine_color" />
                    <corners android:bottomLeftRadius="@dimen/chat_bubble_corner_radius" /> <!-- Adjust corner to match inverse side -->
                </shape>
            </inset>
        </rotate>
    </item>

    <item android:right="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/chat_bubble_mine_color" />
            <corners android:radius="@dimen/chat_bubble_corner_radius" />
        </shape>
    </item>
</layer-list>
