<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="0%"
            android:pivotY="100%"
            android:toDegrees="0" >
            <inset android:insetRight="0%">
            <shape android:shape="rectangle" >
                <solid android:color="@color/chat_bubble_their_color" />
                <corners android:bottomRightRadius="@dimen/chat_bubble_corner_radius"/>
            </shape>
            </inset>
        </rotate>
    </item>
    <item android:left="6dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/chat_bubble_their_color" />
            <corners android:radius="@dimen/chat_bubble_corner_radius" />
        </shape>
    </item>
</layer-list>
