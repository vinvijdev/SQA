<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_user"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/chat_bubble_top_bottom_outer_padding">

    <TextView
        android:id="@+id/tv_chat_main_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/outgoing_chat_bubble"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/chat_bubble_top_bottom_padding"
        android:paddingRight="16dp"
        android:paddingBottom="@dimen/chat_bubble_top_bottom_padding"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="w" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tv_chat_main_user_image"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/img"
        android:visibility="gone"
        app:shapeAppearanceOverlay="@style/ImageCornerRadius"
        app:strokeColor="@color/chat_bubble_mine_color"
        app:strokeWidth="3dp" />

</RelativeLayout>